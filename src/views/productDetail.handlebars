{{#each product }}
    {{#if this.title }}
        <h1>{{this.title}}</h1>
        <hr>
    {{/if}}
    <div class="product-card-detail">
        <div class="product-detail">
            {{#if this.description }}
                <h2>{{this.description}}</h2>
            {{/if}}
            {{#if this.code }}
                <p>{{this.code}}</p>
            {{/if}}
            {{#if this.price }}
                <p>Precio:{{this.price}}</p>
            {{/if}}
            {{#if this.stock }}
                <p>Stock: {{this.stock}}</p>
            {{/if}}
            {{#if this.category }}
                <p>Categor√≠a: {{this.category}}</p>
            {{/if}}
        </div>
    </div>
{{/each}}
